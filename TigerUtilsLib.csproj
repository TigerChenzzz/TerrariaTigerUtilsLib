<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>TigerUtilsLib</AssemblyName>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnablePathGenerator>false</EnablePathGenerator>
    <EnableModBuilder>false</EnableModBuilder>
    <DebugMod>None</DebugMod>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup>
    <DefineConstants>
      $(DefineConstants);
      TERRARIA;
      XNA;
      ZLINQ;
    </DefineConstants>
    <NoWarn>CS1591</NoWarn> <!-- 缺少 XML 注释 -->
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Solaestas.tModLoader.ModBuilder" Version="1.6.1" />
    <Publicize Include="ReLogic" />
    <PackageReference Include="ZLinq" Version="1.4.9" />
  </ItemGroup>
</Project>
